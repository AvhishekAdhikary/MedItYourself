<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkMain"
    tools:context=".ProviderDoctorActivity">

    <Button
        android:text="@string/doc_setup"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:padding="20dp"
        android:textSize="25sp"
        android:layout_margin="5dp"
        android:textAlignment="center"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        style="@style/Widget.MaterialComponents.Button.Icon"
        android:id="@+id/provider_doctor_setup"
        />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/provider_doctor_setup"
        android:text="@string/active"
        android:textSize="25sp"
        android:checked="false"
        android:id="@+id/doc_active_switch"
        android:textColor="@android:color/white"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>